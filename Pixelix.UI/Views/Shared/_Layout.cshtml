<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pixelix - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400..700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="min-vh-100 d-flex flex-column">

    <header>
        <nav class="pixelix-navbar d-flex align-items-center justify-content-between px-4">
            <!-- Logo → imagem -->
            <a asp-controller="Home" asp-action="Index" class="pixelix-logo d-flex align-items-center">
                <img src="~/img/logo-pixelix.png" alt="Pixelix" class="pixelix-logo-img" />
            </a>

<ul class="pixelix-menu d-flex align-items-center gap-4 m-0 p-0">

    <li>
        <a asp-controller="Home" asp-action="Index"
           class="pixelix-link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Home" && ViewContext.RouteData.Values["action"]!.ToString() == "Index" ? "active-link" : "")">
           HOME
        </a>
    </li>

    <li>
        <a asp-controller="Sprites" asp-action="Index"
           class="pixelix-link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Sprites" && ViewContext.RouteData.Values["action"]!.ToString() == "Index" ? "active-link" : "")">
           SPRITES
        </a>
    </li>

    <li>
        <a asp-controller="Home" asp-action="Sobre"
           class="pixelix-link @(ViewContext.RouteData.Values["controller"]!.ToString() == "Home" && ViewContext.RouteData.Values["action"]!.ToString() == "Sobre" ? "active-link" : "")">
           SOBRE NÓS
        </a>
    </li>

</ul>



            <!-- Ícones lado direito -->
            <div class="pixelix-icons d-flex align-items-center gap-3">
                <a asp-controller="Carrinho" asp-action="Index" class="pixelix-icon-btn"><i class="bi bi-cart"></i></a>
                <a asp-controller="Conta" asp-action="Index" class="pixelix-icon-btn"><i class="bi bi-person"></i></a>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 p-0 m-0">
        @RenderBody()
    </main>

    <footer class="pixelix-footer text-center py-4">
        <h5 class="fw-bold mb-3 pixelix-footer-title">Fale Conosco!</h5>

        <div class="d-flex justify-content-center gap-4 mb-3">
            <a href="#" class="pixelix-social"><i class="bi bi-facebook"></i></a>
            <a href="#" class="pixelix-social"><i class="bi bi-twitter"></i></a>
            <a href="#" class="pixelix-social"><i class="bi bi-instagram"></i></a>
        </div>

        <div class="pixelix-footer-info mb-3">
            <span><i class="bi bi-headset"></i> Suporte Chat 24h</span>
            &nbsp;•&nbsp;
            <span><i class="bi bi-envelope"></i> Pixelix@gmail.com</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>